@model BookSeller.Models.Author

@{
	ViewData["Title"] = "Edit";
}

<div class="row text">
	<div class="col-md-6 offset-2">
		<p>
		<h1>
			Chỉnh sửa thông tin tác giả @Model.FullName
		</h1>
		</p>
		<div class="row">
			<div class="col-md-12 offset-2">
				<form asp-action="Edit" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" asp-for="Id" />
					<div class="col-form-label">
						<label asp-for="PictureFile" class="control-label"></label>
						<input asp-for="PictureFile" accept="image/*" />
						<span asp-validation-for="PictureFile" class="text-danger"></span>
					</div>
					<div class="col-form-label">
						<label asp-for="FullName" class="control-label"></label>
						<input asp-for="FullName" class="form-control" />
						<span asp-validation-for="FullName" class="text-danger"></span>
					</div>
					<div class="col-form-label">
						<label asp-for="Bio" class="control-label"></label>
						<textarea asp-for="Bio" class="form-control"></textarea>
						<span asp-validation-for="Bio" class="text-danger"></span>
					</div>
					<div class="form-group">
						<input type="submit" value="Save" class="btn btn-outline-success float-end" />
						<a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
