@model BookSeller.Models.Author

@{
    ViewData["Title"] = "Delete";
}

<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h1>
				Xoá thông tin của tác giả @Model.FullName
			</h1>
		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
				<div class="col-form-label text-center">
					<img  src="@("/Img/Author/"+Model.ProfilePictureURL)"
						 alt="@Model.FullName" style="max-width:350px" />
				</div>
				<div class="col-form-label">
					<label asp-for="FullName" class="control-label"></label>
					<input asp-for="FullName" class="form-control" readonly />
					<span asp-validation-for="FullName" class="text-danger"></span>
				</div>
				<div class="col-form-label">
					<label asp-for="Bio" class="control-label"></label>
					<input asp-for="Bio" class="form-control" readonly />
					<span asp-validation-for="Bio" class="text-danger"></span>
				</div>

				<div class="form-group">
					<form asp-action="Delete">
						<input type="hidden" asp-for="Id">
						<input type="submit" value="Confirm" class="btn btn-danger float-end" />
					</form>

					<a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
				</div>

			</div>
		</div>
	</div>
</div>

