@model BookSeller.Models.Author

@{
	ViewData["Title"] = "Details";
}

<h1>Giới thiệu tác giả</h1>

<div>
	<h4>@Model.FullName</h4>
	<hr />
	<div class="row">

		<table class="table">
			
			<tr>
				<td width="500px">
					<div class="col-form-label">
						<img src="@("/Img/Author/"+Model.ProfilePictureURL)"
							 alt="@Model.FullName" style="max-width:350px" />
					</div>
				</td>
				<td>
					<div class="text-lg-start">
						<p>
							@Model.Bio
						</p>
					</div>
				</td>
			</tr>


		</table>
		<div>
		<a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
		<a asp-action="Index">Back to List</a>
		</div>
	</div>
</div>

</div>
