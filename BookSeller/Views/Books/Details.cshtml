@model BookSeller.Models.Book

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.Name
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@("/Img/Book/"+Model.ImageURL)" width="100%" alt="@Model.Name">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">
                            <b>Cinema: </b>
                            <a asp-controller="Publishers" asp-action="Details" asp-route-id="@Model.Publisher.Id">
                                @Model.Publisher.FullName
                            </a>
                        </p>                      
                        <p class="card-text"><b>Thể Loại: </b>@Model.BookCategory</p>
                        <p class="card-text"><b> Năm Xuất Bản: </b>@Model.PublishingYear.Year</p>                                            
                        <p class="card-text">
                            <b>Tác giả: </b>
                            <hr />
                            <div class="row">                             
                                    <div class="column text-center">
                                        <img class="border-info rounded-circle" src="@("/Img/Author/"+Model.Author.ProfilePictureURL)" style="max-width: 150px" />
                                        <br />
                                    <a asp-controller="Authors" asp-action="Details" asp-route-id="@Model.Author.Id">@Model.Author.FullName</a>
                                    </div>                             
                            </div>
                        </p>

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-start" asp-action="Index">
                                Back to List
                            </a>
                            <a class="btn btn-success text-white float-end"
                               asp-controller="Orders"
                               asp-action="AddItemToShoppingCart" asp-route-id="@Model.Id"><i class="bi bi-cart-plus"></i> Add to Cart (@Model.Price VNĐ)</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
